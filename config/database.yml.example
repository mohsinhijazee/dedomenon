#This is an example database.yml file that you should for connecting
# your applciation to to the MyOwnDB database
# Create your own Version!
# Mohsin Hijazee
# 31-Jan 2007

# You would need four databases
# Three vesrions of the main applicaiton database one for develoopment, test and production
# Fourh database would contain MyOwnDB UI translations that you would load from
# RAILS_ROOT/db/mabb_ui_translations_dump.sql

# List the main application database that you would use for development
development:
  adapter: postgresql
  database: myowndb_dev
  host: localhost
  username: myowndb
  password: password
  port: 5432

# Mention the database containing MyOwnDB UI translations
development-translations:
  adapter: postgresql
  database: myowndb_ui_translations
  host: localhost
  username: myowndb
  password: password
  port: 5432

# Mention your production database here
translate:
  adapter: postgresql
  database: myowndb_prod
  host: localhost
  username: myowndb
  password: password
  port: 5432

# Mention the database containing MyOwnDB UI translations
translate-translations:
  adapter: postgresql
  database: myowndb_ui_translations
  host: localhost
  username: myowndb
  password: password
  port: 5432

# Mention your production database here
production:
  adapter: postgresql
  database: myowndb_prod
  host: localhost
  username: myowndb
  password: password
  port: 5432

# Mention the database containing MyOwnDB UI translations
production-translations:
  adapter: postgresql
  database: myowndb_ui_translations
  host: localhost
  username: myowndb
  password: password
  port: 5432

# Mention the database you would use for tests
test:
  adapter: postgresql
  database: myowndb_test
  host: localhost
  username: myowndbtester
  password: password
  port: 5432

# Mention the database containing MyOwnDB UI translations
test-translations:
  adapter: postgresql
  database: myowndb_ui_translations
  host: localhost
  username: myowndb
  password: password
  port: 5432
